term.clear()
term.setCursorPos(1,1)
print("Do you want to add, subtract, multiply or divide?")
op = read()
print("")
term.clear()

print("What is the first number?")
num1 = tonumber(read())
print("")
term.clear()

print("And the second number?")
num2 = tonumber(read())
print("")
term.clear()

if op == "add" then
  result = num1+num2
  print(result)
  sleep(4)
  term.clear()
end
if op == "subtract" then
  result = num1-num2
  print(result)
  sleep(4)
  term.clear()
end
if op == "multiply" then
  result = num1*num2
  print(result)
  sleep(4)
  term.clear()
end
if op == "divide" then
  result = num1/num2
  print(result)
  sleep(4)
  term.clear()
end
term.clear()
  


