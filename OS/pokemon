--Variables
local Ver = 1.1
local Pokefind = math.random(1,10)--Hur stor chans att hitta
local Pokeamount = math.random(5,10)--Hur många som spawnas
local Pokerandom = math.random(1,230)--Vilken man får
local Pokecatch = math.random(1,2)--Chans att fånga
local Pokemon = nil
local IntroPlayed = false
local lvl = 1
local cp = 0
local xp = 0 --Få 500 för varje fångad
local levelupxp = 2000
local day = 0

--Powerlevel
function lvlcp() 
  if lvl == 1 then
    cp = math.random(10,20)
  elseif lvl == 2 then
    cp = math.random(20,40)
  elseif lvl == 3 then 
    cp = math.random(40,70)
  elseif lvl == 4 then
    cp = math.random(70,100)
  elseif lvl == 5 then
    cp = math.random(70,100)
  elseif lvl == 6 then
    cp = math.random(90,120)
  else
    print("lvl")
  end
end

function levelup()
  if xp > levelupxp then
  clear()
  xp = 0
  term.setCursorPos(20,5)
  lvl = lvl+1
  textutils.slowPrint("You are now level: "..lvl)
  lvlcp()
  end
end
  



