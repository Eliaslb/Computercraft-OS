 local c = "n"
 while c == "n" do
   clear()
   term.setCursorPos(18,8)
   textutils.slowWrite("What is your name? ")
   name = read()
   sleep(1)
   clear()
   term.setCursorPos(17,8)
   write("Your name is "..name.."? y/n ")
   local c
   while true do
     evt, c = os.pullEvent("char")
     c = string.lower(c)
     if c == "y" then
       break
     elseif c == "n" then
       break
     end
   end
   if c == "y" then
     break
   end    
 end 
 
 
